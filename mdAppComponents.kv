                        pos: self.pos
                        size: self.size
                        source: "bgmain2.jpg"
                    
                padding: 60
                spacing: 70
                
                FloatLayout:
                    background_normal: '' 
                    background_color: (1,1,1,0.75) 
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25,]    
                    Label:
                        text: "S I G N I N"
                        bold: True
                        font_size: '50sp'
                        underline: True
                        size_hint: None,None
                        color: (251/255, 192/255, 45/255, 1)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.85}

                    MDTextField:
                        id: log_username
                        hint_text: "Username"
                        #validator: 'email'
                        font_size: "25sp"
                        size_hint: None,None
                        size: dp(395), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                    
                    CustomPasswordField:
                        id: log_password
                        hint_text: "Password"
                        password: True
                        font_size: "25sp"
                        size_hint: None,None
                        size: dp(395), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.55}

                    MDFillRoundFlatButton:
                        text: '{:^55}'.format('Login')  #pad blank spaces left and right
                        font_size: "25sp"
                        size_hint: None,None
