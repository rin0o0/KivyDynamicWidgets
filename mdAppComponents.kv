                            rgba: self.background_color
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25,]    
                    Label:
                        text: "Registration"
                        bold: True
                        font_size: "50sp"
                        underline: True
                        color: (251/255, 192/255, 45/255, 1)
                        size_hint: None,None
                        pos_hint: {'x': 0.2, 'center_y': 0.85}

                    MDTextField:
                        id: username
                        hint_text: "Username"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter a valid username" 
                        size_hint: None,None
                        font_size: "18sp"
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                        
                    
                    MDTextField:
                        id: firstname
                        hint_text: "First Name"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter first name" 
                        size_hint: None,None
                        font_size: "18sp"
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.67}

                    MDTextField:
                        id: lastname
                        hint_text: "Last Name"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter last name" 
                        size_hint: None,None
                        font_size: "18sp"
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.59}
                    
                    MDTextField:
                        id: email
                        hint_text: "Email"
